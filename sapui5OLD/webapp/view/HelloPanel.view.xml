<mvc:View controllerName="logaligroup.sapui5.controller.HelloPanel"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
    <Panel headerText="{i18n>helloPanel}" class="sapUiResponsiveMargin" width="auto">
        <content>
            <Button id="helloDialogButton"
                    icon="sap-icon://action"
                    text="{i18n>showHelloDialogBut}" press=".onOpenDialog" class="sapUiSmallMarginEnd"/>
            <Button text="{i18n>showHelloButtonText}" press=".onShowhello" class="sapUiSmallMarginEnd"/>
            <Input value="{/recipient/name}" width="50%" valueLiveUpdate="true" />
            <Text text="Hello {/recipient/name}" class="sapUiSmallMargin boldElements sapthemeHight-asColor"/>
        </content>
    </Panel>
    <core:Fragment fragmentName="logaligroup.sapui5.view.Form01" type="XML"/>
</mvc:View>